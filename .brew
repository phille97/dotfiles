#!/usr/bin/env bash
# Adapted from https://github.com/mathiasbynens/dotfiles
# Adapted from https://github.com/peterjmit/dotfiles

# Make sure weâ€™re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils

# Install some other useful utilities like `sponge`.
brew install moreutils

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Update bash version
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

# dupes allows us to update os x tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep

# Install more recent versions of some OS X tools.
brew install vim --with-override-system-vi
brew install macvim --with-override-system-vim
brew install homebrew/dupes/grep
brew install homebrew/dupes/openssh
brew install homebrew/dupes/screen
brew install homebrew/php/php55 --with-gmp

# Install font tools.
brew tap bramstein/webfonttools
brew install sfnt2woff
brew install sfnt2woff-zopfli
brew install woff2

# Updated PHP + tools
brew tap homebrew/versions
brew tap homebrew/homebrew-php
brew install php56
brew install php56-xdebug
brew install composer
# Code quality tools
brew install php-cs-fixer
brew install php-code-sniffer
brew install phpmd
brew install phpunit

# node
brew install node

# Other utilities
brew install git
brew install git-lfs
brew install speedtest_cli
brew install ack
brew install graphicsmagick
brew install imagemagick
brew install rename
brew install osxfuse
brew install elinks
brew install lolcat
# optional
# brew install go
# brew install android-sdk

# Python (( http://docs.python-guide.org/en/latest/starting/install/osx/ ))
brew install python
brew install python3
brew install pyenv
brew install pyenv-virtualenv
brew install pyenv-virtualenvwrapper

# virtualenvwrapper (( http://docs.python-guide.org/en/latest/dev/virtualenvs/#virtualenvwrapper ))
pip install virtualenvwrapper
export WORKON_HOME=~/Envs
source /usr/local/bin/virtualenvwrapper.sh

# Security / Network tools
brew install nmap
brew install masscan

# Install me some apps!
brew install caskroom/cask/brew-cask

function installcask() {
    brew cask install "${@}" 2> /dev/null
}

installcask google-chrome
installcask imagealpha
installcask imageoptim
installcask iterm2
installcask miro-video-converter
installcask spectacle
installcask the-unarchiver
installcask tor-browser
installcask virtualbox
installcask vlc

# Remove outdated versions from the cellar
brew cleanup
